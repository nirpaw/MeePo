<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditInfoActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/edit_info_bar"/>

    <ImageView
        android:id="@+id/editinfo_main_photo"
        android:layout_width="264dp"
        android:layout_height="242dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="63dp"
        app:srcCompat="@drawable/main_profile_photo" />

    <ImageView
        android:id="@+id/editinfo_edit_main_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="235dp"
        android:layout_marginTop="281dp"
        android:layout_marginEnd="138dp"
        app:srcCompat="@drawable/edit_info_icon" />

    <ImageView
        android:id="@+id/editinfo_photo_2"
        android:layout_width="112dp"
        android:layout_height="121dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="24dp"
        android:layout_toEndOf="@+id/editinfo_main_photo"
        app:srcCompat="@drawable/photo_replace" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="51dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="3dp"
        app:srcCompat="@drawable/add_photo_btn" />

    <ImageView
        android:id="@+id/editinfo_photo_3"
        android:layout_width="115dp"
        android:layout_height="118dp"
        android:layout_below="@+id/editinfo_photo_2"
        android:layout_alignBottom="@+id/editinfo_main_photo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/editinfo_main_photo"
        app:srcCompat="@drawable/photo_replace" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="51dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="286dp"
        android:layout_marginEnd="6dp"
        app:srcCompat="@drawable/add_photo_btn" />


</RelativeLayout>