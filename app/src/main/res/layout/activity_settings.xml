<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/settings_bar"/>

    <TextView
        android:id="@+id/settings_discovery_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="220dp"
        android:text="@string/settings_discovery_settings"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/settings_discovery_settings_location"
        android:layout_width="346dp"
        android:layout_height="32dp"
        android:layout_below="@+id/settings_discovery_settings_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="32dp"
        android:text="@string/settings_my_current_locations"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/settings_settings_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_discovery_settings_location"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="304dp"
        android:text="@string/settings_show_me"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/settings_male_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_settings_show"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="179dp"
        android:layout_toStartOf="@+id/settings_male_sw"
        android:text="@string/settings_men"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/settings_female_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_male_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="181dp"
        android:layout_toStartOf="@+id/settings_female_sw"
        android:text="@string/settings_women"
        android:textSize="18sp" />

    <Switch
        android:id="@+id/settings_male_sw"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_settings_show"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="59dp" />

    <Switch
        android:id="@+id/settings_female_sw"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_male_sw"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="59dp"
        android:checked="true" />

    <ImageButton
        android:id="@+id/settings_save_btn"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@+id/settings_female_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="0dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/logo" />



</RelativeLayout>