<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="30dp"
    android:id="@+id/cv_item_usr_in_place"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_user_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/profile_image"
            android:maxLines="1"
            android:text="username"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_user_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_first_name"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@id/profile_image"
            android:maxLines="1"
            android:text="[age]"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/psik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_first_name"
            android:layout_marginStart="3dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/tv_user_age"
            android:text="," />

        <TextView
            android:id="@+id/tv_user_gendet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_first_name"
            android:layout_marginStart="9dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@id/psik"
            android:maxLines="1"
            android:text="[gender]"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_age"
            android:layout_marginStart="11dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/profile_image"
            android:maxLines="1"
            android:text="[Last seen:"
            android:textSize="18sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
